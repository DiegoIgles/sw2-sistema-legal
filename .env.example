DB_HOST=localhost
DB_PORT=5433
# username/password recognized by the app (DB_USERNAME/DB_PASSWORD) - keep secure
DB_USERNAME=legal_user
DB_PASSWORD=legal_pass
# also set DB_USER/DB_PASS aliases which some dev tooling may expect
DB_USER=legal_user
DB_PASS=legal_pass
DB_NAME=legal_db
# Puerto donde correr√° la app (por defecto 3000)
PORT=3000

# Secrets para JWT - generar valores seguros y reemplazarlos
# Puedes generar secrets con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_CLIENT_SECRET=replace_with_secure_hex
JWT_SECRET=replace_with_secure_hex
NODE_ENV=development